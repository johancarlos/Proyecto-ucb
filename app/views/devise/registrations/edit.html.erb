<h2><center>Editar cuenta</center></h2>

<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
<body>
    <div class="container">
        <div class="container">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">                                
                        <div class="row-fluid user-row">
                            <img src="/assets/radio.jpg" class="img-responsive" alt="Conxole Admin"/>
                        </div>
                    </div>
                    <div class="panel-body">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

                      <div class="field">
                        <%= f.label :'Correo electrónico' %><br />
                        <%= f.email_field :email, autofocus: true, :placeholder => "Email...", :size => "35" %>
                        <div style = "color: red;">
                          <%= @user.errors[:email].any? ? @user.errors[:email].to_s[/\w([^"]*)/] : "" %>
                        </div>
                      </div>

                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                      <% end %>

                      <div class="field">
                        <%= f.label :Contraseña %> <i>(déjelo en blanco si no desea cambiarlo)</i><br />
                        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password...", :size => "35" %>
                        <div style = "color: red;">
                          <%= @user.errors[:password].any? ? @user.errors[:password].to_s[/\w([^"]*)/] : "" %>
                        </div>
                        <% if @minimum_password_length %>
                          <br />
                          <em><%= @minimum_password_length %> caracteres mínimo</em>
                        <% end %>
                      </div>

                      <div class="field">
                        <%= f.label :'Confirmación de contraseña' %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password...", :size => "35" %>
                        <div style = "color: red;">
                          <%= @user.errors[:password_confirmation].any? ? @user.errors[:password_confirmation].to_s[/\w([^"]*)/] : "" %>
                        </div>
                      </div>

                      <div class="field">
                        <%= f.label :'Contraseña actual' %> <i>(necesitamos su contraseña actual para confirmar sus cambios)</i><br />
                        <%= f.password_field :current_password, autocomplete: "off", :placeholder => "Password...", :size => "35", :required => "required" %>
                        <div style = "color: red;">
                          <%= @user.errors[:current_password].any? ? @user.errors[:current_password].to_s[/\w([^"]*)/] : "" %>
                        </div>
                      </div>

                      <div class="actions">
                          <%= f.submit "Guardar",:class => 'btn btn-success' %>
                      </div>
                    <% end %>
                    <%= link_to "Atras", :back, :class => 'btn btn-warning active' %>
                  </div>
                </div>
            </div>
        </div>
    </div>
</body>