<% flash.each do |key, value| %>
   <div class="container">
    <div class="alert alert-danger">
      <strong>
        <center>
          <%= value %>
        </center>
      <strong>
    </div>
  </div>
<% end %>
      
<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
<body>
    <div class="container">
        <div class="container">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">                                
                        <div class="row-fluid user-row">
                            <img src="/assets/radio.jpg" class="img-responsive" alt="Conxole Admin"/>
                        </div>
                    </div>
                    <div class="panel-body">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :role => "form", :class => "form-signin") do |f| %>
                            <fieldset>
                                <label class="panel-login">
                                    <div class="login_result"></div>
                                </label>
                                <%= f.email_field :email, :class => "form-control", :placeholder => "Email", :id => "email", :required => "required" %>
                                <%= f.password_field :password, :class => "form-control", :placeholder => "Contraseña", :id => "password", :required => "required" %>
                                <br></br>
                                <%= f.submit "Iniciar sesión", :class => "btn btn-lg btn-success btn-block", :id => "login" %>
                            </fieldset>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</div>
