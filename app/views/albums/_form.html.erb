<%= form_with(model: album, local: true) do |form| %>
  <div class="container">
    <div class="rowAlbum">
      <div class="col-sm-4">
        <%= form.label :Nombre %>
        <%= form.text_field(:name, {:class=>'form-control', :maxlength=>"150"}) %>
        <div style="color: red;">
          <%= @album.errors[:name].any? ? @album.errors[:name].to_s[/\w([^"]*)/] : ""%>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="rowAlbum">
      <div class="col-sm-4">
      <br>
      <%= form.submit "Guardar" ,:class=>"btn btn-success"%>
      </div>
    </div>
  </div>
<% end %>
