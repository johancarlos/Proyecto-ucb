<% if user_signed_in? %>
  <% if current_user.manageAlbum == false %>
    <script type="text/javascript">
      window.location.href="/"
    </script>
  <% end %>
<% else %>
  <script type="text/javascript">
    window.location.href="/"
  </script>
<% end %>
<div class="container">
  <div class="rowAlbum">
    <div class="col-sm-8">
      <div class="well well-lg">
        <h1>
          Formulario para editar un Album
        </h1>
      </div>
    </div>
  </div>
</div>
<%= render 'form', album: @album %>

<div class="container">
  <div class="rowAlbum">
    <div  class="col-sm-4">
      <br>
      <%= link_to 'Atras', album_path(@album) ,:class=>"btn btn-warning"%>
    </div>
  </div>
</div>
