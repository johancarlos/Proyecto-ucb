<%= form_with(model: contest, local: true) do |form| %>


          <div class="form-group">
            <%= form.label :Nombre%>
            <div class="input-group">
            <%= form.text_field(:name, {:class => 'form-control', :maxlength => "100"}) %>
              <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
              <div style = "color: red;">
                <%= @contest.errors[:name].any? ? @contest.errors[:name].to_s[/\w([^"]*)/] : "" %>
              </div>
            </div>
          </div>

          <% if @contest.contestants.count !=0 %>
            <div class="form-group">
              <%= form.label :Ganador_Del_Concurso %>
              <div class="input-group">
                <%= form.select :contest_winner do %>
                  <% @contest.contestants.each do |contestant| %>
                    <%= content_tag(:option, contestant.getName, value:contestant.getName) %>
                  <% end %> 
                <% end %>    
              </div>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :Imagen %>
            <div class="input-group">
              <%= form.file_field :image %>
              <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
              <div style = "color: red;">
                <%= @contest.errors[:image].any? ? @contest.errors[:image].to_s[/\w([^"]*)/] : "" %>
              </div>
            </div>
          </div>


          <div class="form-group">
            <%= form.label :Descripción %>
            <div class="input-group">
              <%= form.text_area(:description, {:class => 'form-control',:cols => '60', :rows => '7', :maxlength => "1000"}) %>
              <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
              <div style = "color: red;">
                <%= @contest.errors[:description].any? ? @contest.errors[:description].to_s[/\w([^"]*)/] : "" %>
              </div>
            </div>
          </div>


          <div class="form-group">
              <%= form.label :"Tipo de Concurso"%>
                <div class="input-group">
                  <%= form.radio_button :typeContest, 'Video', :checked => true %> Videos
                  <%= form.radio_button :typeContest, 'Imagen' %> Imágenes
                  <%= form.radio_button :typeContest, 'Audio' %> Audios
                </div>
          </div>


          <div class="form-group">
            <%= form.label :Fecha_inicio  %>
            <div class="input-group">
              <%= form.text_field :date_start, data:{behaviour:'datepicker'} %>
              <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
              <div style = "color: red;">
                <%= @contest.errors[:date_start].any? ? @contest.errors[:date_start].to_s[/\w([^"]*)/] : "" %>
              </div>
            </div>
          </div>



          <div class="form-group">
            <%= form.label :Fecha_fin  %>
            <div class="input-group">
              <%= form.text_field :date_end, data:{behaviour:'datepicker'} %>
              <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
              <div style = "color: red;">
                <%= @contest.errors[:date_end].any? ? @contest.errors[:date_end].to_s[/\w([^"]*)/] : "" %>
              </div>
            </div>
          </div>


          <div class="form-group">
            <%= form.label :Descripción_de_Premios %>
            <div class="input-group">
              <%= form.text_area(:award, {:class => 'form-control',:cols => '60', :rows => '4', :maxlength => "250"}) %>
              <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
              <div style = "color: red;">
                <%= @contest.errors[:award].any? ? @contest.errors[:award].to_s[/\w([^"]*)/] : "" %>
              </div>
            </div>
          </div>
            <%= form.submit "Guardar",:class => 'btn btn-success'%>
 
<% end %>


<script type="text/javascript">
$(document).ready(function(){
  $('[data-behaviour~=datepicker]').datepicker({
    format: "dd/mm/yyyy",
    weekStart: 1,
    maxViewMode: 0,
    todayBtn: "linked",
    clearBtn: true,
    language: "es",
    forceParse: false,
    calendarWeeks: true,
    autoclose: true
  });
})
</script>
