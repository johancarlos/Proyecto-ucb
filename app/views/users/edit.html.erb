<% if user_signed_in? %>
  <% if current_user.admin == false %>
    <script type="text/javascript">
      window.location.href="/"
    </script>
  <% end %>
<% else %>
  <script type="text/javascript">
    window.location.href="/"
  </script>
<% end %>

<% if @user.id == 1 %>
  <script type="text/javascript">
    window.location.href="/"
  </script>
<% end %>

<h2><center>Editar usuario</center></h2>

<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
<body>
    <div class="container">
        <div class="container">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">                                
                        <div class="row-fluid user-row">
                            <img src="/assets/radio.jpg" class="img-responsive" alt="Conxole Admin"/>
                        </div>
                    </div>
                    <div class="panel-body">
                      <%= form_for(@user) do |f| %>

                        <div class="field">
                          <%= f.label :'Correo electrónico' %><br />
                          <%= f.email_field :email, disabled: true %>
                        </div>

                        <div class="field">
                          <%= f.check_box :admin %> Gestionar Usuarios
                        </div>

                        <div class="field">
                          <%= f.check_box :manageService %> Gestionar Servicios
                        </div>

                        <div class="field">
                          <%= f.check_box :manageEvent %> Gestionar Eventos
                        </div>

                        <div class="field">
                          <%= f.check_box :manageContact %> Gestionar Contactos
                        </div>

                        <div class="field">
                          <%= f.check_box :manageAlbum %> Gestionar Álbumes
                        </div>

                        <div class="field">
                          <%= f.check_box :manageAboutsecrad %> Gestionar Quienes somos
                        </div>

                        <div class="field">
                          <%= f.check_box :managePoll %> Gestionar Encuestas
                        </div>

                        <div class="field">
                            <%= f.check_box :manageContest %> Gestionar Concursos
                        </div>

                        <div class="field">
                            <%= f.check_box :manageRadio %> Gestionar Radio
                        </div>

                        <div class="actions">
                          <%= f.submit "Guardar",:class => 'btn btn-success' %>
                        </div>
                      <% end %>

                      <%= link_to "Atras", :back, :class => 'btn btn-warning active' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>