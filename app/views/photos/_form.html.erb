<%= form_for([ @album, @photo ], url:album_photos_path) do |form| %>

<div class="container">
  <div class="rowPhoto">
    <div class="col-sm-4">
      <%= form.label :Nombre%>
      <%= form.text_field(:name, {:class => 'form-control', :maxlength => "30"}) %>
      <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
      <div style = "color: red;">
        <%= @photo.errors[:name].any? ? @photo.errors[:name].to_s[/\w([^"]*)/] : "" %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="rowPhoto">
    <div class="col-sm-4">
      <%= form.label :Imagen %>
      <%= form.file_field :image, id: :photo_image %>
      <%#Obtener solo el mensaje con la expresion regular /\w([^]*)/%>
      <div style = "color: red;">
        <%= @photo.errors[:image].any? ? @photo.errors[:image].to_s[/\w([^"]*)/] : "" %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="rowPhoto">
    <div class="col-sm-4">
      <br>
      <%= form.submit "Guardar",:class => 'btn btn-primary'%>
    </div>
  </div>
</div>
<% end %>
