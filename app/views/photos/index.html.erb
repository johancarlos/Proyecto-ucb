<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Image
      </th>
      <th>
        Album
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td>
          <%= photo.name %>
        </td>
        <td>
          <%= photo.image %>
        </td>
        <td>
          <%= photo.album.name %>
        </td>
        <td>
          <%= link_to 'Show', photo %>
        </td>
        <% if user_signed_in? %>
          <% if current_user.manageAlbum? %>
            <td>
              <%= link_to 'Edit', edit_photo_path(photo) %>
            </td>
            <td>
              <%= link_to 'Eliminar', photo, method: :delete, data: { confirm: '¿Está seguro que desea eliminar la foto?' }, :class=>'btn btn-danger' %>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if current_user.manageAlbum? %>
    <%= link_to 'New Photo', new_photo_path %>
  <% end %>
<% end %>